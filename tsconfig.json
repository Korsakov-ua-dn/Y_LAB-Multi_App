{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "ES2021.String"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": [
        "./src"
    ]
}